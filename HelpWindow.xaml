<Window x:Class="Calculator.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="Help" Height="374" Width="481.5">
    <Grid Margin="10" Background="gray">
        <Button
                x:Name="Button_Exit"
                Content="Close"
                HorizontalAlignment="Left"
                Margin="150,258,0,0"
                VerticalAlignment="Top"
                Width="148"
                Height="50"
                FontWeight="Bold"
                Click="Button_Exit_Click" />
        <TextBlock Margin="50,36,50,125" FontWeight="Bold" FontSize="15" LineHeight="72">
                1) Enter your 'a' 'b' and 'c' coefficents. <LineBreak />
                2) Make sure your numbers are both valid itegers. <LineBreak />
                3) Click the 'Calculate' button.
        </TextBlock>
    </Grid>
</Window>